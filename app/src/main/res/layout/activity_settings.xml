<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <include layout="@layout/layout_toolbar" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserIconBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/upload"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="24sp" />
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:foreground="@color/divider" />

    <RelativeLayout
        android:id="@+id/btnUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/settings_image"
                android:src="@drawable/setting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvTitleStaffSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/account_settings_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSubtitleStaffSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/account_info"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:foreground="@color/divider" />

    <RelativeLayout
        android:id="@+id/layoutChatSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/chatSettings"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivChatSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/settings_image"
                android:src="@drawable/chats" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvTitleSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="Chats"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSubtitleSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/view_chats"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:foreground="@color/divider" />
    <RelativeLayout
        android:id="@+id/btnStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/staff_Settings"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivStaffSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/settings_image"
                android:src="@drawable/managestaff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvTitleChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/staff_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSubtitleChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/staff_management_subtitle"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:foreground="@color/divider" />
</LinearLayout>

