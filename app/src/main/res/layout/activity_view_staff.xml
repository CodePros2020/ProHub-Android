<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewStaffActivity"
    android:orientation="vertical"
    android:id="@+id/relative_layout">
    <include layout="@layout/layout_toolbar"/>
    <TextView
        android:id="@+id/tvTitleStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Staff Management"
        android:textSize="24sp"
        android:layout_gravity="start"
        android:gravity="start"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/colorButtonProperty"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout"
        android:layout_below="@+id/tvTitleStaff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Property: "
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginStart="30dp"
            />

        <Spinner
            android:id="@+id/spProperties"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>
    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/linear_layout"/>
<!--    <LinearLayout-->
<!--        android:id="@+id/staffListLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical">-->


        <TextView
            android:id="@+id/tvStaffList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:text="Staff List"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/hr"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/plus"
        app:rippleColor="@color/colorWhite" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/staffRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_below="@+id/tvStaffList"/>

<!--    </LinearLayout>-->

</RelativeLayout>