<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <include layout="@layout/layout_toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserIconBtn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/upload"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUserInfo"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/clipboard"
        android:drawableTint="#009688"
        android:text="     Account Settings"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:translationY="25sp" />

    <Button
        android:id="@+id/btnStaff"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/employees"
        android:drawableTint="#009688"
        android:text="     Staff"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:translationY="50sp" />

</LinearLayout>