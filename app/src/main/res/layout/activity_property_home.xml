<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PropertyHomeActivity">

    <include layout="@layout/layout_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#ffffff"
            android:clickable="false"
            android:drawableLeft="@drawable/dashboard"
            android:padding="24dp"
            android:text="DashboardTest"
            android:textAlignment="center"
            android:textColor="#008577"
            android:textSize="20sp" />

        <Button
            android:id="@+id/chatButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="237dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/question"
            android:elevation="4dp"
            android:onClick="goChat"
            android:padding="12dp"
            android:text="@string/chat_property_home"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/newsroomButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="45dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/news"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="@string/news_property_home"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/staffButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chatButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="236dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/employees"
            android:elevation="4dp"
            android:onClick="goForms"
            android:padding="12dp"
            android:text="STAFF"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/formsButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/staffButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="234dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/clipboard"
            android:elevation="4dp"
            android:onClick="goForms"
            android:padding="12dp"
            android:text="@string/forms_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/unitButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsroomButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/apartment"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Units"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unitButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="46dp"
            android:backgroundTint="#008577"
            android:drawableTop="@drawable/wheel"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="@string/settings_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>