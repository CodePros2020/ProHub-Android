<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PropertyHomeActivity">

    <include layout="@layout/layout_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dashboardTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textAlignment="center"
            android:textSize="36sp"
            android:translationY="20dp" />

        <ImageView
            android:id="@+id/mailImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="50dp"
            android:translationY="100dp"
            app:srcCompat="@drawable/mail" />

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="50dp"
            android:translationY="180dp"
            app:srcCompat="@drawable/news" />

        <ImageView
            android:id="@+id/formsImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="50dp"
            android:translationY="260dp"
            app:srcCompat="@drawable/forms" />

        <ImageView
            android:id="@+id/settingsImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="50dp"
            android:translationY="340dp"
            app:srcCompat="@drawable/settings" />

        <Button
            android:id="@+id/chatButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#008577"
            android:text="@string/chat_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="160dp"
            android:translationY="100dp"
            android:onClick="goChat"/>

        <Button
            android:id="@+id/newsroomButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#008577"
            android:text="@string/news_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="160dp"
            android:translationY="180dp" />

        <Button
            android:id="@+id/formsButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#008577"
            android:text="@string/forms_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="160dp"
            android:translationY="260dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#008577"
            android:text="@string/settings_property_home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="160dp"
            android:translationY="340dp" />
    </FrameLayout>



</LinearLayout>